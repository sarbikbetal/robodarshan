<% provide(:title, @user.name) %>
<div class="container my-3">
  <div class="row">
    <div class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
      </section>
    </div>
    <div class="col-md-8">
      <% if @user.projects.any? %>
      <h3>Projects (
        <%= @user.projects.count %>)</h3>
      <ol class="projects">
        <%= render @projects %>
      </ol>
      <%= will_paginate @projects %>
      <% end %>
    </div>

  </div>
</div>